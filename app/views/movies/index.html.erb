<h1>Movies#index</h1>
<p>Find me in app/views/movies/index.html.erb</p>
<%= form_with url: root_path, method: :get do |form| %>
  <%= form.text_field :query, class: 'form-control' %>
  <%= form.submit "Search", class: 'btn btn-info text-white m-3' %>
<% end %>


<% @movies.each do |movie| %>
  <h2><%= movie.title %></h2><br>
  <%= movie.year %><br>
  <%= movie.synopsis %><br><br>
<% end %>
